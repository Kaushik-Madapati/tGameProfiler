<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    style="@style/screen_layout_style"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        style="@style/header_text_view_style"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="New Tournament"
        android:id="@+id/textViewNewtournament"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        style="@style/edit_view_style"
        android:hint="Tournament Name"
        android:id="@+id/editTextTournamentName"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



    <EditText
        style="@style/edit_view_style"
        android:hint="Tournament Place"
        android:id="@+id/editTextTournamentPlace"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



    <EditText
        style="@style/edit_view_style"
        android:hint="Court Type"
        android:id="@+id/editTextCourtType"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />




</LinearLayout>

