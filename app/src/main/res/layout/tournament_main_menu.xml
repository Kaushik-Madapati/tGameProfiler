<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    style="@style/screen_layout_style">

    <include layout="@layout/statics_reuse_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal" />

    <Spinner
        android:id="@+id/spinnerTournamentName"
        style="@style/combo_box_style"
        android:background="@drawable/round_button"
        android:textColor="#ffeeff"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

<Button
    android:id="@+id/btnNewTournament"
    style="@style/btn_style"
    android:background="?android:attr/selectableItemBackground"
    android:textColor="#ffeeff"
    android:text="@string/btn_new_tournament"
    android:layout_gravity="center_horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:weightSum="1">
        <!-- view for AdMob Banner Ad -->
        <com.google.android.gms.ads.AdView android:id="@+id/adView" android:layout_width="match_parent"
            android:layout_height="71dp" android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true" ads:adSize="BANNER"
            ads:adUnitId="@string/tournament_banner_ad_unit_id" />
    </LinearLayout>

</LinearLayout>