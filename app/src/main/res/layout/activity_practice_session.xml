<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    style="@style/screen_layout_style"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.naveen.mytennisstats.NewMatchActivity">

    <include layout="@layout/new_match_reuse"/>

    <EditText
        style="@style/edit_view_style"
        android:id="@+id/editTextSessionName"
        android:hint="Enter New Session"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal" />

    <EditText
        style="@style/edit_view_style"
        android:id="@+id/editTextSessionComments"
        android:hint="Enter Comments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:weightSum="1">
        <!-- view for AdMob Banner Ad -->
        <com.google.android.gms.ads.AdView android:id="@+id/adView" android:layout_width="match_parent"
            android:layout_height="67dp" android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true" ads:adSize="BANNER"
            ads:adUnitId="@string/practice_banner_ad_unit_id" />
    </LinearLayout>


</LinearLayout>
