<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left|top">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                style="@style/text_view_style"
                android:text="Forehand"
                android:id="@+id/txtForehand"
                android:layout_gravity="center_horizontal|top"
                android:layout_column="0" />

            <TextView
                style="@style/text_view_style"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="0"
                android:id="@+id/txtValueForehandValue"
                android:layout_gravity="left|top"
                android:layout_column="1" />

            <Button
                style="@style/text_view_style"
                android:text="More"
                android:id="@+id/btnForehandAdd"
                android:layout_gravity="right|top"
                android:layout_column="2" />
        </TableRow>

       <TableRow>
            <TextView
                style="@style/text_view_style"
                android:text="Backend"
                android:id="@+id/txtBackend"
                android:layout_gravity="left|bottom" />

            <TextView
                style="@style/text_view_style"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="0"
                android:id="@+id/txtViewBackendValue"
                android:layout_gravity="left|bottom" />

           <Button
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="More"
               android:id="@+id/btnBackendAdd"
               android:layout_gravity="center_horizontal|bottom" />
       </TableRow>
        <TableRow>
            <TextView
                style="@style/text_view_style"
                android:text="Volley"
                android:id="@+id/txtVolley"
                android:layout_gravity="left|bottom" />

            <TextView
                style="@style/text_view_style"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="0"
                android:id="@+id/txtViewVolleyValue"
                android:layout_gravity="left|bottom" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="More"
                android:id="@+id/btnVolleyAdd"
                android:layout_gravity="center_horizontal|bottom" />
        </TableRow>
        <TableRow>
            <TextView
                style="@style/text_view_style"
                android:text="Serve"
                android:id="@+id/txtServe"
                android:layout_gravity="left|bottom" />

            <TextView
                style="@style/text_view_style"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="0"
                android:id="@+id/txtViewServeValue"
                android:layout_gravity="left|bottom" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="More"
                android:id="@+id/btnServeAdd"
                android:layout_gravity="center_horizontal|bottom" />
        </TableRow>
     </TableLayout>

</FrameLayout>
